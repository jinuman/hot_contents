<% include header.ejs %>

<h1><%= title %></h1>

<a href="/board/write">글쓰기</a>
<br>
<br>

<div class="col-sm-10">
    <table class="table table-bordered table-hover">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>출처</th>
            <!--<th>조회수</td>-->
            <!--<th>변경일</td>-->
        </tr>

        <%
        for(var i = 0; i < rows.length; i++)
        {
        %>
        <tr>
            <td><%= i + 1 %></td>
            <td><a href="<%= rows[i].LINK %>"><%= rows[i].TITLE %></a></td>

            <% if ( rows[i].TYPE == 1) { %>
            <td>디씨</td>
            <%}%>
            <% if ( rows[i].TYPE == 2) { %>
            <td>오유</td>
            <%}%>
        </tr>
        <%
        }
        %>
    </table>
</div>



<% include ../header.ejs %>

<h1><%= title %></h1>

<a href="/board/write">글쓰기</a>
<br>
<br>

<div class="col-sm-10">
    <table class="table table-bordered table-hover">
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>출처</th>
            <!--<th>조회수</td>-->
            <!--<th>변경일</td>-->
        </tr>

        <%
        for(var i = 0; i < results.length; i++)
        {
        %>
        <tr>
            <td><%= i + 1 %></td>
            <td><a href="<%= results[i].LINK %>"><%= results[i].TITLE %></a></td>

            <% if ( results[i].TYPE == 1) { %>
            <td>디씨</td>
            <%}%>
            <% if ( results[i].TYPE == 2) { %>
            <td>오유</td>
            <%}%>
        </tr>
        <%
        }
        %>

    </table>
    <div>
        <% if(page > pageSize) { %>
        [ <a href="/board/list/1" style="text-decoration: none;">◀◀</a> ]
        [ <a href="/board/list/<%=startPage-1%>" style="text-decoration: none;">◀</a> ]
        <% } else {%>
        [ <span style="color:gray">◀◀</span> ]
        [ <span style="color:gray">◀</span> ]
        <% } %>
        &nbsp;&nbsp;
        <% for (var i=startPage; i<=endPage; i++) { %>
        <% if (i== page) {%>
        [ <%=i%> ]
        <% } else { %>
        [ <a href="/board/list/<%=i%>" style="text-decoration: none;"><%=i%></a> ]
        <% } %>
        <% } %>
        &nbsp;&nbsp;
        <% if (endPage < totalPage) { %>
        [ <a href="/board/list/<%=endPage+1%>" style="text-decoration: none;">▶</a> ]
        [ <a href="/board/list/<%=totalPage%>" style="text-decoration: none;">▶▶</a> ]
        <% } else {%>
        [ <span style="color:gray">▶</span> ]
        [ <span style="color:gray">▶▶</span> ]
        <% } %>
    </div>
</div>



<% include ../footer.ejs %>
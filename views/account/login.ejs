<% include ../header.ejs %>

<div class="container">

    <form id="loginForm" method="post" action="/account/login">
        <div class="form-group">
            <label>아이디</label>
            <input style="width: 70%" type="text" class="form-control" name="user_id" placeholder="ID">
        </div>
        <div class="form-group">
            <label>비밀번호</label>
            <input style="width: 70%" type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <script>
        <% if (error) { %>
        alert("로그인 실패");
        <% } %>
    </script>
</div>

